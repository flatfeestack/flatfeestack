{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "@openzeppelin/contracts",
        "@openzeppelin/contracts-upgradeable"
      ],
      "allowedVersions": "<=4.8"
    },
    {
      "matchPackageNames": [
        "ch.qos.logback:logback-classic"
      ],
      "matchPaths": [
        "smart-contracts-neo/"
      ],
      "allowedVersions": "<=1.3"
    },
    {
      "groupName": "Github Actions - all non-major dependencies",
      "matchPaths": [
        ".github/"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "analyzer - all non-major dependencies",
      "matchPaths": [
        "analyzer/"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "backend - all non-major dependencies",
      "matchPaths": [
        "backend/"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "forum - all non-major dependencies",
      "matchPaths": [
        "forum/"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "caddy - all non-major dependencies",
      "matchPaths": [
        "caddy/"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "fastauth - all non-major dependencies",
      "matchPaths": [
        "fastauth/"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "monitoring - all non-major dependencies",
      "matchPaths": [
        "monitoring/"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "payout - all non-major dependencies",
      "matchPaths": [
        "payout/"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "smart-contracts-eth - all non-major dependencies",
      "matchPaths": [
        "smart-contracts-eth/"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "smart-contracts-neo - all non-major dependencies",
      "matchPaths": [
        "smart-contracts-neo/"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "postUpdateOptions": [
    "gomodTidy",
    "npmDedupe",
    "pnpmDedupe"
  ],
  "schedule": [
    "before 12pm every thursday"
  ]
}